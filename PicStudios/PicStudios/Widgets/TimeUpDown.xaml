<UserControl x:Name="timeUpDown" x:Class="PicStudios.Widgets.TimeUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PicStudios.Widgets"
             mc:Ignorable="d" Height="44.742" Width="90.918" LostFocus="timeUpDown_LostFocus">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Column="0" Grid.ColumnSpan="2" Stroke="#FF707070"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Column="0" Grid.ColumnSpan="3" Stroke="#FF707070"/>
            <Label x:Name="lbl_hours" Grid.Column="0" Content="00" VerticalAlignment="Center" HorizontalAlignment="Center" MouseDown="lbl_hours_MouseDown" PreviewKeyDown="lbl_hours_PreviewKeyDown"/>
            <Label x:Name="lbl_minutes" Grid.Column="1" Content="00" VerticalAlignment="Center" HorizontalAlignment="Center" MouseDown="lbl_minutes_MouseDown"/>
            <Label x:Name="lbl_secconds" Grid.Column="2" Content="00" VerticalAlignment="Center" HorizontalAlignment="Center" MouseDown="lbl_secconds_MouseDown"/>
            <Label Grid.Column="0" Grid.ColumnSpan="2" Content=":" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Grid.Column="1" Grid.ColumnSpan="2" Content=":" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button x:Name="btn_up" Content="↑" DockPanel.Dock="Top" Grid.Row="0"/>
            <Button x:Name="btn_down" Content="↓" DockPanel.Dock="Bottom" Grid.Row="1"/>
        </Grid>
    </Grid>
</UserControl>
